.home{
  position: relative;
}
.home .bg_img{
  width: 100%;
  height: 200rpx;
  position: absolute;
  top:0;
  left:0;
  z-index: -1;
}

.img-wrap
{
  text-align: center;
  display: flex;
  justify-content:center ;
}
.img-wrap .img{
  /* 屏幕总宽度为375px 750rpx */
  width: 702rpx;
