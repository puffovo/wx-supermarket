.search-wrap{
  width: 100%;
  /* 横向排列 */
  display: flex;
  /* 对齐方式  两端对齐*/
  justify-content: space-between;
  /* 上下左右边距都是24rpx */
  padding: 24rpx;
  /* 怪异盒子 */
  box-sizing: border-box;
  /* 居中 */
  align-items: center;
  border-radius: 20rpx;
}

/* 定位图标大小设置 */
.search-wrap .icon-img{
  width: 30rpx;
  height: 35rpx;
}
/* 搜索栏 高度设置 */
.search-wrap .search-box{
  height: 40rpx;
  /* width: 200rpx; */
  flex:1;
  background-color: white;
  /* 外边距 提供两个数：上下 左右 */
  margin: 0 24rpx;
  /* 内边距 */
  padding: 0 20rpx;
  /* 边框圆滑 */
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}

.search-wrap .search-box .search-input{
  /*使得搜索框里的字左右移动  */
  margin-left: 10rpx;
  flex:1;
}
/* 扶贫 热销 模块 */
.img-wrap1{
  display: flex;
  justify-content: space-around;
  margin:20rpx;
}
.img-wrap1 .img{
  height: 150rpx;
  width: 100rpx;
}

/* 限时抢购模块 */
.timeline-wrap{
  padding-top: 24rpx;
  /*灰色横栏 */
  border-top: 20rpx solid #f5f5f5;
}
.timeline-wrap .timeline-header{
  display: flex;
  justify-content: space-between;
  /* 竖直方向上居中 */
  align-items: center;
}
.timeline-wrap .timeline-header .more{
  margin-right: 24rpx;
   font-size: 30rpx;
   color: #999;
}
.timeline-wrap .timeline-header .timeline-title-wrap{
  display: flex;
  align-items: center;

}
.timeline-wrap .timeline-header .timeline-title-wrap .title-tag-wrap{
  height: 60rpx;
  background-color: #ffbb33;
  padding: 0rpx 30rpx;
  /* 左上 右上 右下 左下 */
  border-radius:0 30rpx 30rpx 0;
  display: flex;
  align-items: center;
}

.timeline-wrap .timeline-title-wrap .time-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.timeline-wrap .timeline-title-wrap .text{
  color: white;
  font-size: 28rpx;

}
.timeline-wrap .time-wrap{
  display: flex;
  align-items: center;
  /* 正在疯抢左边距 */
  margin-left:10rpx ;
  font-size: 28rpx;
}
.timeline-wrap .time-wrap .time{
  /* 时间的左边距 */
  /* margin-left: 20rpx; */
} 
.timeline-wrap .time-wrap .time .num{
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  /* 设置了上下左右边距 */
  margin: 0 4rpx;
   /* 黑底白字 */
  background-color: black;
  color: white;
}
