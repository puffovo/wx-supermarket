/* 每日好货更新 */
.daily-wrap{
  background:#f5f5f5;
  padding: 25rpx 25rpx 0 25rpx;
}
.daily-wrap .img-wrap3 {
  display: flex;
  /* 横轴居中 */
  align-items: center;
  /* 竖直方向居中 */
  justify-content: center;

  height: 70rpx;
  background: white;
  /* 左上 右上 右下 左下 */
   border-radius:30rpx;
}
.daily-wrap .img-wrap3 .text{
  font-size: 30rpx;
  font-weight: 550;
  /* 字间距 */
  letter-spacing: 2rpx;
  padding: 0 20rpx;
}
.daily-wrap .img-wrap3 .img{
  height: 10rpx;
  width: 200rpx;
}

/* 每日好货内容 */
.daily-wrap .good-list{
  display: flex;
  align-items: center;
  background-color:white;
  border-radius: 20rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  line-height: 40rpx;

}
.daily-wrap .good-list .good-list-img{
  width: 175rpx;
  height: 175rpx;
  border-radius: 20rpx;
}
.daily-wrap .good-list .good-list-content{
  flex: 1;
  margin-left: 20rpx;
  justify-content: space-between;
}
.daily-wrap .good-list .name{
  font-size: 28rpx;
  font-family: '微软雅黑';
}

.daily-wrap .good-list .tag{
  color: #ffbb33;
