  padding-top: 5rpx;
}

.daily-wrap .good-list .content-footer{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

/* 拼团部分 */
.daily-wrap .good-list .group-wrap {
  font-size: 24rpx;
  align-items: flex-start;
}

.daily-wrap .good-list .group-wrap .all-num{
  margin: 0 10rpx;
  color: #ffbb33;
}
.daily-wrap .good-list .group-wrap .num{
 color: #999;
}
/* 左边图片部分 */
.daily-wrap .good-list .group-wrap .group-img{
  width: 30rpx;
  height: 30rpx;
  padding-top: 5rpx;
}

.daily-wrap .good-list .content-footer .price{
  font-size: 32rpx;
  color: red;
}

.daily-wrap .good-list .content-footer .old-price{
  font-size: 25rpx;
  color:#999;
  margin-left: 20rpx;
  text-decoration: line-through;
}

.daily-wrap .good-list .content-footer .btn{
  font-family: '微软雅黑';
